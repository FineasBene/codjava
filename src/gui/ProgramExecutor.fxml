<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.ProgramExecutorController"
      spacing="10" alignment="CENTER">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Number of PrgStates:"/>
        <TextField fx:id="numberOfProgramStatesTextField" editable="false"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <VBox spacing="5">
            <Label text="Heap Table"/>
            <TableView fx:id="heapTableView">
                <columns>
                    <TableColumn fx:id="addressColumn" text="Address"/>
                    <TableColumn fx:id="valueColumn" text="Value"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="5">
            <Label text="Output"/>
            <ListView fx:id="outputListView"/>
        </VBox>

        <VBox spacing="5">
            <Label text="File Table"/>
            <ListView fx:id="fileTableListView"/>
        </VBox>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
         <VBox spacing="5">
            <Label text="PrgState Identifiers"/>
            <ListView fx:id="programStateIdentifiersListView"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Symbol Table"/>
            <TableView fx:id="symbolTableView">
                <columns>
                    <TableColumn fx:id="variableNameColumn" text="Variable Name"/>
                    <TableColumn fx:id="variableValueColumn" text="Value"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="5">
            <Label text="Execution Stack"/>
            <ListView fx:id="executionStackListView"/>
        </VBox>
    </HBox>

    <Button fx:id="runOneStepButton" text="Run One Step" onAction="#runOneStep" maxWidth="Infinity"/>

</VBox>
